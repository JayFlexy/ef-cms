{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DelegateS3Access",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::ACCOUNT_ID:root"
      },
      "Action": ["s3:GetObject", "s3:ListBucket", "s3:GetObjectTagging"],
      "Resource": [
        "arn:aws:s3:::DOCUMENTS_BUCKET/*", 
        "arn:aws:s3:::DOCUMENTS_BUCKET" 
      ]
    }
  ]
}